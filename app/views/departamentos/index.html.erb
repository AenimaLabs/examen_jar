<h1>Departamentos#index</h1>
<p>Tabla general de departamentos</p>
<table>
  <thead>
    <tr>
      <th>Número</th>
      <th>Edificio</th>
      <th>Acción</th>
      <%# <th>Dirección</th>
      <th>Ciudad</th> %>

      
    </tr>
  </thead>
  <tbody>
    <% @departamentos.each do |depa| %>
      <tr>
        <td><%= depa.numero %></td>
        <td><%= depa.edificio.nombre %></td>
        <!--<td><%= depa.edificio.direccion %></td>
        <td><%= depa.edificio.ciudad %></td>-->
        <td><%= link_to "Mostrar", departamento_path(depa), :class=> "action show"%></td>
       <td><%= link_to "Editar", edit_departamento_path(depa), :class=> "action edit"%> </td> 
       <td><%= link_to "Eliminar", delete_departamento_path(depa), :class=> "action delete"%> </td></td> 
      </tr>
    <% end %>
  </tbody>
</table>

